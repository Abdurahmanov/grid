@import "grid.styl"

* {
  box-sizing: border-box;
}

html {
  height: 100%
}

body {
  margin: 0;
  font-family: 'Roboto', 'Arial', sans-serif;
  height: 100%;
  -webkit-font-smoothing: subpixel-antialiased;
}

header,
nav,
section,
article,
aside,
footer {
  display: block;
}

a {
  text-decoration: none;
}

.btn{
  padding 0 15px
  height 30px
  font-size 16px
  cursor pointer
  outline none
  color #fff
  border none
  border-radius 5px
  opacity 0.8
  transition 0.3s
  margin-right 15px
  &:last-child{
    margin-right 0
  }
  &_remove{
    background red
  }
  &_edit{
    background green
  }
}
